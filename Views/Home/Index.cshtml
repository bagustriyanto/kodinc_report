@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Upload & Download History</h4>
        <div class="row">
            <div class="col-md-12">
                <table id="group-dt" class="table align-middle table-nowrap table-check table-hover results"
					style="width: 100%;">

				</table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var dt;

    const Toast = Swal.mixin({
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
        }
    });

    dt = $("#group-dt").DataTable({
        ajax: {
            url: '/history',
            type: "POST",
            dataSrc: "data",
            data: function(d) {

            },
        },
        searching: true,
        processing: true,
        serverSide: true,
        info: true,
        paging: true,
        columns: [
            {
                title: "Id",
                data: "id",
                orderable: false
            },
            {
                title: "File Name",
                data: "fileName",
                orderable: false
            },
            {
                title: "File Path",
                data: "filePath",
                orderable: false
            },
            {
                title: "Type",
                data: "type",
                orderable: false,
                render: function(data) {
                    return data.toUpperCase();
                }
            },
            {
                title: "Status",
                data: "status",
                orderable: false,
                render: function(data) {
                    return data.toUpperCase();
                }
            },
            {
                title: "Action",
                data: "id",
                orderable: false,
                render: function(data, type, row, meta) {
                    return `
                        <ul class="list-unstyled hstack gap-1 mb-0">
                            <li data-bs-toggle="tooltip" data-bs-placement="top" title="Ubah">
                                <button type="button" onclick="edit('${meta.row}')" class="btn btn-sm btn-primary">Reset Status</button>
                            </li>
                        </ul>`
                }
            }
        ]
    })

    async function edit(row_id) {
		const data = dt.row(row_id).data();

        const requestData = {
            status: "initialize"
        }
        
        Swal.fire({
			title: 'Are you sure to reset status?',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Yes',
			cancelButtonText: 'No'
		}).then((result) => {
			if (result.isConfirmed) {
				$.ajax({
					type: "PUT",
					dataType: "json",
					async: true,
					contentType: "application/json;charset=utf-8",
					url: `/history/status/${data.id}`,
					data: JSON.stringify(requestData),
                    success: function(data) {
                        Toast.fire({
                            icon: "success",
                            title: data.message
                        });
                        dt.ajax.reload();
                    },
                    error: function(data) {
                        Toast.fire({
                            icon: "error",
                            title: data.responseJSON.message
                        });
                    }
				});
			}
		})
	}

    function save() {

    }
</script>
}
